# EUGLOH Course Watcher Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# BASIC CONFIGURATION
# ============================================================================

# URL to scrape for events
TARGET_URL="https://www.eugloh.eu/courses-trainings/?openRegistrations=%5Byes%5D"

# CSS selector(s) that match registration links
# Multiple selectors can be comma-separated
REG_LINK_SELECTOR="div.buttons-wrap a.button, p.formUrl a, div.buttons-wrap a[href*='register'], a[href*='register'], a[href*='intranet.eugloh.eu']"

# CSS selector for event titles (default: h5.headline)
TITLE_SELECTOR="h5.headline"

# CSS selector for event dates (default: time, .date)
DATE_SELECTOR="time, .date"

# Path to state file for deduplication
STATE_FILE="./seen.json"

# Path to output RSS feed file
FEED_FILE="./feed.xml"

# User agent string for HTTP requests
USER_AGENT="eugloh-event-checker/1.0"

# Request timeout in seconds
REQUEST_TIMEOUT="15"

# ============================================================================
# EXPIRED EVENT HANDLING
# ============================================================================

# Grace period in days after deadline before marking event as expired
# Set to 0 to mark as expired immediately after deadline
# Set to 7 to keep events active for a week after deadline
EXPIRED_DAYS_BUFFER="0"

# ============================================================================
# HISTORICAL TRACKING & STATISTICS
# ============================================================================

# Path to historical tracking JSON file
HISTORY_FILE="./history.json"

# Path to statistics JSON output
STATS_FILE="./docs/stats.json"

# Path to statistics HTML dashboard
STATS_HTML_FILE="./docs/stats.html"

# ============================================================================
# WEBHOOK NOTIFICATIONS (OPTIONAL)
# ============================================================================

# Generic webhook URL (Zapier, Make, n8n, etc.)
# Uncomment and add your webhook URL to enable
# WEBHOOK_URL="https://hooks.zapier.com/hooks/catch/12345/abcdef/"

# ============================================================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# ============================================================================

# Set to "true" to enable email notifications
EMAIL_ENABLED="false"

# Email sender address
# EMAIL_FROM="your-email@gmail.com"

# Email recipient address(es) - comma-separated for multiple recipients
# EMAIL_TO="recipient1@example.com,recipient2@example.com"

# SMTP server settings
# EMAIL_SMTP_HOST="smtp.gmail.com"
# EMAIL_SMTP_PORT="587"

# SMTP authentication
# EMAIL_SMTP_USER="your-email@gmail.com"

# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
# EMAIL_SMTP_PASSWORD="your-app-password"

# ============================================================================
# MICROSOFT TEAMS NOTIFICATIONS (OPTIONAL)
# ============================================================================

# Microsoft Teams incoming webhook URL
# To get this: Teams Channel → ⋯ → Connectors → Incoming Webhook
# TEAMS_WEBHOOK_URL="https://your-org.webhook.office.com/webhookb2/12345@abcdef/IncomingWebhook/xyz/123"

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Maximum number of retries for HTTP requests (not currently used)
# MAX_RETRIES="3"

# Delay between retries in seconds (not currently used)
# RETRY_DELAY="5"

# Enable debug logging (not currently used)
# DEBUG="false"
